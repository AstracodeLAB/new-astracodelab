---
import Layout from '../layouts/Layout.astro';
import MainHome from '../layouts/partials/MainHome.astro';

const title = 'AstracodeLAB | Diseño Web Profesional y Desarrollo a Medida';
const description =
  'Creamos páginas web profesionales, ágiles y accesibles que reflejan tu marca o tu talento creativo. Ofrecemos soluciones web a medida para clientes en toda España.';
const permalink = Astro.url.href;
const robots = 'index, follow';
---

<Layout title={title} description={description} permalink={permalink} robots={robots}>
  <div class='page-container'>
    <MainHome />
L
<style>
  .page-container {
    opacity: 0;
    animation: fade-in 0.8s ease-out forwards;
  }

  /* Animación fade-in */
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

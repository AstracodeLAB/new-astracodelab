---
import Header from './partials/Header.astro';
import '../styles/global.scss';
import Footer from './partials/Footer.astro';
import CookieBanner from './components/CookieBanner.astro';
import { ClientRouter } from 'astro:transitions';import '@fontsource/roboto/latin-300.css'; // Light - Latin only
import '@fontsource/roboto/latin-400.css'; // Regular - Latin only
import '@fontsource/roboto/latin-500.css'; // Medium - Latin only
import '@fontsource/roboto/latin-600.css'; // Semibold - Latin only
import '@fontsource/roboto/latin-700.css'; // Bold - Latin only
import '@fontsource/roboto/latin-ext-400.css'; // Regular Latin Extended (á, é, í, ó, ú, ñ)
export interface Props {
  title: string;
  description: string;
  permalink: string; // La URL canónica de la página
  image?: string;
  robots?: string;
}
const {
  title,
  description,
  permalink,
  robots = 'index, follow',
  image = 'https://astracodelab.com/og_astracode.png',
} = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <title>{title}</title>
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' , initial-scale='1' />
    <link rel='icon' type='image/svg+xml' href='/favicon.ico' />
    <!-- Font optimization: Las fuentes se cargan desde @fontsource (self-hosted) -->
    <link rel='canonical' href={permalink} />
    <meta name='msvalidate.01' content='08A045B5065017F91DE8FBA3B76391FC' />
    <meta name='robots' content={robots} />
    <meta name='author' content='AstracodeLAB' />
    <meta name='language' content='es' />
    <meta property='og:locale' content='es_ES' />
    <meta property='og:title' content={title} />
    <meta property='og:type' content='website' />
    <meta property='og:description' content={description} />
    <meta property='og:image' content={image} />
    <meta property='og:url' content={permalink} />
    <meta property='og:site_name' content='AstracodeLAB' />
    <meta name='facebook-domain-verification' content='siis4pr1xna8mdw75uoabxrpl3t3s8' />
    <meta name='generator' content={Astro.generator} />
    <ClientRouter />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <CookieBanner />
  </body>
</html>

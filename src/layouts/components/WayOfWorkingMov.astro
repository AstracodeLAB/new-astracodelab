<script>
 document.addEventListener('DOMContentLoaded', function () {
  // Seleccionamos el contenedor principal
  const timelineList = document.querySelector('.workingMov__timeline-list');

  // Validar que timelineList no sea null
  if (!timelineList) {
    console.error('El elemento .workingMov__timeline-list no se encontró.');
    return;
  }

  // Seleccionamos todos los ítems de la lista
  const timelineItems = document.querySelectorAll('.workingMov__timeline-list-item');

  // Creamos el Intersection Observer
  const observer = new IntersectionObserver((entries) => {
    let hasActiveItem = false; // Variable para rastrear si hay al menos un ítem visible

    entries.forEach(entry => {
      const circle = entry.target.querySelector('.workingMov__timeline-list-item-circle');

      if (entry.isIntersecting) {
        // Cuando el ítem entra en la vista
        entry.target.classList.add('active');
        if (circle) circle.classList.add('active');
        hasActiveItem = true; // Al menos un ítem es visible
      } else {
        // Cuando el ítem sale de la vista
        entry.target.classList.remove('active');
        if (circle) circle.classList.remove('active');
      }
    });

    // Si hay algún ítem activo, activamos el borde del contenedor
    if (hasActiveItem) {
      timelineList.classList.add('active');
    } else {
      timelineList.classList.remove('active');
    }
  }, {
    threshold: 1 // El umbral para activar el observer es cuando el 50% del ítem está en vista
  });

  // Observamos cada ítem
  timelineItems.forEach(item => observer.observe(item));
});

  </script>
  
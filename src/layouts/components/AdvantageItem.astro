---
const { icono, titulo, descripcion, className = '' } = Astro.props;
---

<div class={`advantage-item ${className}`}>
  <div class="advantage-item__advantage">
    <div class="advantage-item__icon">
      <Fragment set:html={icono} />
    </div>
    <h3 class="advantage-item__title">{titulo}</h3>
  </div>
  <div class="advantage-item__help">
    <p class="advantage-item__description">{descripcion}</p>
  </div>
</div>
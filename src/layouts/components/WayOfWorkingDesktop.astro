<script>
    document.addEventListener('DOMContentLoaded', () => {
  const items = document.querySelectorAll('.workingDesktop__timeline-list-item');
  const timeline = document.querySelector('.workingDesktop__timeline-list')!; // Usamos "!" para indicar que no es null
  
  items.forEach((item, index) => {
    const circle = item.querySelector('.workingDesktop__timeline-list-item-circle')!; // Usamos "!" también aquí
    
    // Evento para cuando el mouse entra (hover)
    item.addEventListener('mouseenter', () => {
      // Cambiar el color de la línea central según el índice del círculo
      if (index === 0) {
        timeline.classList.add('hover1'); // Primer círculo - Primer degradado
        timeline.classList.remove('hover2', 'hover3'); // Eliminar otros degradados
      } else if (index === 1) {
        timeline.classList.add('hover2'); // Segundo círculo - Segundo degradado
        timeline.classList.remove('hover1', 'hover3'); // Eliminar otros degradados
      } else if (index === 2) {
        timeline.classList.add('hover3'); // Tercer círculo - Tercer degradado
        timeline.classList.remove('hover1', 'hover2'); // Eliminar otros degradados
      } else if (index === 3) {
        timeline.classList.add('hover4'); // Tercer círculo - Tercer degradado
        timeline.classList.remove('hover2', 'hover3'); // Eliminar otros degradados
      } else if (index === 4) {
        timeline.classList.add('hover5'); // Tercer círculo - Tercer degradado
        timeline.classList.remove('hover6', 'hover1', 'hover4', 'hover2', 'hover3', 'hover4'); // Eliminar otros degradados
      } else if (index === 5) {
        timeline.classList.add('hover6'); // Tercer círculo - Tercer degradado
        timeline.classList.remove('hover4', 'hover5'); // Eliminar otros degradados
      }
       else {
        // Aquí puedes agregar más cambios si tienes más círculos
      }

      // Agregar la clase 'active' a este y todos los círculos anteriores
      items.forEach((otherItem, otherIndex) => {
        const otherCircle = otherItem.querySelector('.workingDesktop__timeline-list-item-circle');
        if (otherCircle) { // Verificamos que 'otherCircle' no sea null
          if (otherIndex <= index) {
            otherCircle.classList.add('active');
          } else {
            otherCircle.classList.remove('active');
          }
        }
      });
    });

    // Evento para cuando el mouse sale
    item.addEventListener('mouseleave', () => {
      // Limpiar la clase 'active' de todos los círculos
      items.forEach((otherItem) => {
        const otherCircle = otherItem.querySelector('.workingDesktop__timeline-list-item-circle');
        if (otherCircle) { // Verificamos que 'otherCircle' no sea null
          otherCircle.classList.remove('active');
        } 
      });

      // Limpiar las clases de degradado al salir
      timeline.classList.remove('hover1', 'hover2', 'hover3', 'hover4', 'hover5', 'hover6');
    });
  });
});



  </script>
  

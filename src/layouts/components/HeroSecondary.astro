---
const { title, subtitle, text, image, alt} = Astro.props;
import '../../styles/HeroSecondary.scss';
---

<section class="sectionHeroSecondary">
  <article class="sectionHeroSecondary__content">
    <div class="sectionHeroSecondary__content-intro">
      <div class="sectionHeroSecondary__content-intro-image">
        <img src={image.src} alt={alt} class="sectionHeroSecondary__content-intro-image-item" />
      </div>
      <h1 class="sectionHeroSecondary__content-intro-title">
        {title}   
        <span class="sectionHeroSecondary__content-intro-subtitle">{subtitle}</span>     
      </h1>

    </div>
    <p class="sectionHeroSecondary__text">{text}</p>

  </article> 
</section>
---
import TitleSecondary from './Titles/TitleSecondary.astro';
const { title, paragraphs = [], image } = Astro.props;
---

<section class='incluye'>
  <div class='incluye__grid'>
    
    <div class='incluye__col1'>
      <div class='incluye__title'>
        <TitleSecondary text={title} />
      </div>
      {paragraphs[0] && <p class='incluye__text'>{paragraphs[0]}</p>}

     
      <div class='incluye__extra-col1'>
        {paragraphs[1] && <p class='incluye__text'>{paragraphs[1]}</p>}
        {paragraphs[2] && <p class='incluye__text'>{paragraphs[2]}</p>}
      </div>
    </div>
    
    
    {image && (
      <div class='incluye__col2'>
        <img src={image} alt='Imagen relacionada' class='incluye__image' />

        <!-- PÃ¡rrafo 4 -->
        <div class='incluye__extra-col2'>
          
        {paragraphs[3] && <p class='incluye__text'>{paragraphs[3]}</p>}
        {paragraphs[4] && <p class="incluye__full">{paragraphs[4]}</p>}
        </div>
      </div>
    )}
  </div>

  
{paragraphs[5] && <p class="incluye__full">{paragraphs[5]}</p>}
 
  <div class="incluye__resto">
    {paragraphs.slice(1).map((p) => (
      <p class='incluye__text'>{p}</p>
    ))}
  </div>
</section>
